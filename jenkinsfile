pipeline {
    agent any
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Build') {
            steps {
                echo 'Building'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing'
            }
        }
        stage('Release') {
            steps {
                echo 'Releasing'
            }
        }
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonarscanner') { 
                    // Replace 'Sonar-scanner' with your actual SonarQube server name in Jenkins
                    withCredentials([string(credentialsId: 'sonartoken', variable: 'SONAR_TOKEN')]) {
                        sh '''mvn sonar:sonar \
                            -Dsonar.projectKey=Devops-CICD \
                            -Dsonar.login=${SONAR_TOKEN}'''
                    }
                }
            }
        }
    }
}
